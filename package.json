{
  "name": "your-package-name",
  "version": "0.0.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-repo-user/your-repo-name.git"
  },
  "author": "@jimmy-guzman <jimmy.guzman@outlook.com>",
  "license": "MIT",
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier '**/**/*.{md,yml,json}'",
    "format:check": "pnpm format -c",
    "format:write": "pnpm format -w",
    "lint": "eslint --cache --color --cache-location ./node_modules/.cache/eslint/ . --ext .js",
    "lint:fix": "pnpm lint --fix",
    "test": "jest --coverage --passWithNoTests",
    "test:watch": "jest --watch",
    "validate": "run-p lint format:check test",
    "cz": "gitzy --commitlint",
    "prepare": "is-ci || husky install"
  },
  "prettier": "@comparto/prettier-config",
  "lint-staged": {
    "*.{md,yml,json}": [
      "prettier --write"
    ],
    "*.{js}": [
      "eslint --fix"
    ]
  },
  "devDependencies": {
    "@comparto/eslint-config": "^6.1.0",
    "@comparto/prettier-config": "^1.2.0",
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/git": "^10.0.1",
    "commitlint": "^17.0.3",
    "eslint": "^7.14.0",
    "gitzy": "^3.2.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "jest": "^28.1.3",
    "lint-staged": "^13.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.3",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0"
  },
  "files": [
    "dist"
  ],
  "volta": {
    "node": "16.16.0"
  }
}
