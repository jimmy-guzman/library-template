{
  "name": "your-package-name",
  "version": "0.0.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/jimmy-guzman/library-template.git"
  },
  "license": "MIT",
  "keywords": [],
  "publishConfig": {
    "access": "public"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "types": "./dist/index.d.ts",
  "scripts": {
    "dev": "run-p build:watch ts:watch",
    "format": "prettier --check --cache .",
    "format:fix": "prettier --write --cache .",
    "lint": "eslint --cache --color .",
    "lint:fix": "pnpm lint --fix",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "build": "tsup src/index.ts",
    "build:watch": "pnpm build --watch",
    "ts": "tsc --noEmit",
    "ts:watch": "pnpm ts --watch",
    "commit": "gitzy --commitlint",
    "prepare": "is-ci || husky install"
  },
  "gitzy": {
    "useCommitlintConfig": true
  },
  "lint-staged": {
    "*.{md,json,yml,ts}": [
      "prettier -w"
    ],
    "*.ts": [
      "eslint"
    ]
  },
  "devDependencies": {
    "@commitlint/config-conventional": "17.0.3",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/git": "10.0.1",
    "c8": "7.11.3",
    "commitlint": "17.0.3",
    "eslint": "8.20.0",
    "eslint-config-jimmy-guzman": "6.0.0",
    "gitzy": "3.2.0",
    "husky": "8.0.1",
    "is-ci": "3.0.1",
    "lint-staged": "13.0.3",
    "npm-run-all": "4.1.5",
    "prettier": "2.7.1",
    "semantic-release": "19.0.3",
    "tsup": "6.1.3",
    "typescript": "4.7.4",
    "vitest": "0.18.1"
  },
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">= 14"
  }
}
